# -*- mode: yaml -*-
manifest:
  version: 1.0

on:
  - pr_created
  - pr_ready_for_review

automations:
  assign_code_experts:
    if:
       - {{ not pr.draft }}
       - {{ pr.author != 'renovate' }}
    run:
      - action: add-reviewers@v1
        args:
          reviewers: {{ repo | codeExperts(gt=30) | random }}
      - action: explain-code-experts@v1
        args:
          gt: 10
